@model IEnumerable<Employee>
@{
    ViewData["Title"] = "ข้อมูลพนักงาน";
}

<br />
<a asp-action="AddEmployees"><img src="/employee.png" width="70" /></a>
<hr />

@if (Model.Count() > 0)
{
    <span class="d-flex justify-content-end">Total = @Model.Count() ราย</span>
    <div class="form-control p-3">
        <table class="table mt-2">
            <thead class="table-dark">
                <tr>
                    <th scope="col">รหัสพนักงาน</th>
                    <th scope="col">วันที่</th>
                    <th scope="col">เวลา</th>
                    <th scope="col">ชื่อพนักงาน</th>
                    <th scope="col">นามสกุล</th>
                    <th scope="col">แผนก/ส่วนงาน</th>
                    <th scope="col">อาการ</th>
                    <th scope="col">นำส่ง</th>
                    <th scope="col">ผู้นำส่ง</th>
                    <th scope="col">ผู้บันทึก</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var list in Model)
                {
                    <tr>
                        <td>@list.EmployeeId</td>
                        <td>@list.Date</td>
                        <td>@list.Time</td>
                        <td>@list.Firstname</td>
                        <td>@list.lastname</td>
                        <td>@list.Department</td>
                        <td>@list.Description</td>
                        <td>@list.Hospital</td>
                        <td>@list.Rider</td>
                        <td>@list.Recorder</td>
                        <td>
                            <a asp-action="Edit"
                               asp-controller="Employee"
                               asp-route-id="@list.Id"><img src="/edit.png" width="30" /></a> |
                            <a asp-action="Delete"
                               asp-controller="Employee"
                               asp-route-id="@list.Id"
                               onclick="return confirm('คุณต้องการลบ @list.Firstname หรือไม่?')"><img src="/delete.png" width="30" /></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    
}
else
{
    <div class="alert alert-secondary mt-2">ไม่มีข้อมูลของพนักงาน</div>
}



