@model IEnumerable<Todolist>
@{
    ViewData["Title"] = "ข้อมูล Todolist";
}

<br />
<a asp-action="Create" asp-controller="TodoList"><img src="/idea.png" width="60" /></a>
<hr />

@if (Model.Count() > 0)
{
    <div class="container mt-4">
        @foreach (var item in Model)
        {
            <p class="fw-bold">วันที่ : @item.Date</p>
            <p class="fw-bold">หัวข้อ : @item.Name</p>
            <p class="fw-bold">รายละเอียด : @item.Description</p>
            <p class="fw-bold">กำหนดเสร็จ : @item.Finish</p>
            <p class="fw-bold">หมายเหตุ : @item.Other</p>
            <div class="d-flex gap-2">
                <a asp-action="Edit"
                   asp-controller="TodoList"
                   asp-route-id="@item.Id"><img src="/edit.png" width="30" /></a>
                <a asp-action="Delete"
                   asp-controller="TodoList"
                   asp-route-id="@item.Id" onclick="return confirm('คุณต้องการจะลบ @item.Name หรือไม่?')"><img src="/delete.png" width="30" /></a>
            </div>
            <hr />
        }
    </div>
}
else
{
    <div class="alert alert-secondary mt-3">ไม่มีข้อมูลแสดง</div>
}

   
